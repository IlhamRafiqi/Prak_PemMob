<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Halaman2Activity">

    <!-- Header dengan gambar + logo + title -->
    <FrameLayout
        android:id="@+id/header_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.35">

        <!-- Gambar header -->
        <ImageView
            android:id="@+id/iv_gedung_teknik"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/teknik_unsoed_2"/>

        <!-- Logo Unsoed -->
        <ImageView
            android:id="@+id/iv_logo_unsoed"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="90dp"
            android:src="@drawable/lambang_unsoed"
            android:contentDescription="@string/app_name"/>

        <!-- Label Profil Lulusan -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/holo_orange_light"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:minWidth="180dp"
            android:minHeight="40dp"
            android:gravity="center" >

            <FrameLayout
                android:layout_width="220dp"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Profil Lulusan"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="26sp"/>
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>

    <!-- Konten scroll -->
    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header_container"
        app:layout_constraintBottom_toTopOf="@id/btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Card Deskripsi -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_profil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@color/material_dynamic_primary90">

                <TextView
                    android:id="@+id/tv_lulusan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="@string/desc_lulusan"
                    android:textSize="14sp"
                    android:justificationMode="inter_word"
                    android:textColor="@android:color/black"
                    android:textStyle="italic"/>
            </androidx.cardview.widget.CardView>

            <!-- Include layout_menu dengan spacing -->
            <include
                layout="@layout/layout_menu"
                android:id="@+id/layoutPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>

            <include
                layout="@layout/layout_menu"
                android:id="@+id/layoutEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>

            <include
                layout="@layout/layout_menu"
                android:id="@+id/layoutLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>

            <include
                layout="@layout/layout_menu"
                android:id="@+id/layoutIg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Tombol kembali -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:textColor="@android:color/white"
        app:backgroundTint="@color/colorPrimary"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
